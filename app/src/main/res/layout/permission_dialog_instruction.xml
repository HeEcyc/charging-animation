<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="274:208"
        app:layout_constraintWidth_percent="0.9257"
        app:layout_constraintVertical_bias="0.103"
        android:src="@mipmap/permission_dialog_image_instruction"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/buttonClose"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.081"
        app:layout_constraintVertical_bias="0.009"
        app:layout_constraintHorizontal_bias="0.9853"
        android:src="@drawable/ic_close"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="187:24"
        app:layout_constraintWidth_percent="0.63"
        app:layout_constraintVertical_bias="0.06278"
        android:gravity="center"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="20sp"
        app:autoSizeMinTextSize="1sp"
        android:textColor="#0B0135"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/setting_instructions"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="236:71"
        app:layout_constraintWidth_percent="0.7973"
        app:layout_constraintVertical_bias="0.5664"
        android:gravity="center"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="16sp"
        app:autoSizeMinTextSize="1sp"
        android:textColor="#0B0135"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/instruction_short"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="203:40"
        app:layout_constraintWidth_percent="0.6858"
        app:layout_constraintVertical_bias="0.7279"
        android:gravity="center"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="12sp"
        app:autoSizeMinTextSize="1sp"
        android:textColor="#800B0135"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/if_your_device_does_not_have_this_permission_you_can_ignore_it"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/buttonMoreInfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="248:50"
        app:layout_constraintWidth_percent="0.838"
        app:layout_constraintVertical_bias="0.9238"
        app:cardElevation="0dp"
        app:cardCornerRadius="500dp"
        app:cardBackgroundColor="#0B0135">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="20sp"
            app:autoSizeMinTextSize="1sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/more_information"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>