                    android:scaleType="centerCrop"
                    android:src="@mipmap/preview_07"/>
            </com.sti.ilo.ui.custom.ScalableCardView>

        </com.sti.ilo.ui.custom.ClickableMotionLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/motionLayout"
            app:layout_constraintDimensionRatio="1:1" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/motionLayout"
            app:layout_constraintDimensionRatio="1:1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>