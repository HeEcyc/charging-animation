<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <import type="com.darkky.ca.ui.custom.ScalableCardView.ScaleType"/>
    </data>

    <com.darkky.ca.ui.custom.ScalableCardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="360:660"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        scaleType="@{ScaleType.BY_WIDTH}"
        scalableCornerRadius="@{0.111f}">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="332:40"
                app:layout_constraintWidth_percent="0.9222"
                app:layout_constraintVertical_bias="0.1"
                android:gravity="center"
                app:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="18sp"
                app:autoSizeMinTextSize="1sp"
                android:textColor="#383636"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/lock_screen_display_instructions"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/buttonClose"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.0863"
                app:layout_constraintVertical_bias="0.0159"
                app:layout_constraintHorizontal_bias="0.9547"
                android:src="@drawable/ic_close"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="360:468"
                app:layout_constraintVertical_bias="0.6875"
                android:overScrollMode="never"
                android:scrollbars="vertical"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbarTrackVertical="@drawable/scrollbar_track"
                android:scrollbarThumbVertical="@drawable/scrollbar_thumb">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintWidth_percent="0.735388888888"
                        app:layout_constraintHorizontal_bias="0.136874"
                        android:textSize="14sp"
                        android:textColor="#383636"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/instruction_long"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.darkky.ca.ui.custom.ScalableCardView>

</layout>