<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.darkky.ca.ui.main.MainViewModel" />
    </data>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/motionLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#10383636"
        app:layoutDescription="@xml/motion_scene"
        app:motionProgress="1"
        android:visibility="gone"
        xmlns:tools="http://schemas.android.com/tools"
        tools:motionProgress="0"
        tools:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.925">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintDimensionRatio="333:800"
                        android:src="@drawable/settings_bg"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/white"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintDimensionRatio="42:800"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintDimensionRatio="291:800">
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="vertical"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="291:382"
                            app:layout_constraintVertical_bias="0.1507177">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="47">
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/buttonBack"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintDimensionRatio="58:47"
                                    android:src="@drawable/button_back"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="71"/>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="32"
                                android:onClick="@{(_) -> viewModel.onTurnOnOffClick()}">
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintDimensionRatio="30:22"
                                    app:layout_constraintHeight_percent="0.6875"
                                    android:src="@mipmap/ic_show"/>
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintDimensionRatio="158:32"
                                    app:layout_constraintHorizontal_bias="0.3609"
                                    android:gravity="center_vertical"
                                    app:autoSizeTextType="uniform"
                                    app:autoSizeMaxTextSize="14sp"
                                    app:autoSizeMinTextSize="1sp"
                                    android:textColor="#383636"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text="@string/show_on_unlocked_screen"/>
                                <androidx.appcompat.widget.SwitchCompat
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintDimensionRatio="42:24"
                                    app:layout_constraintHeight_percent="0.75"
                                    app:layout_constraintHorizontal_bias="0.9437751"
                                    android:thumb="@drawable/switch_thumb"
                                    app:track="@drawable/switch_track"
                                    android:clickable="false"
                                    android:checked="@{viewModel.isAppOn}"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="30"/>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="32"
                                android:onClick="@{(_) -> viewModel.onNotificationsClick()}">
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintDimensionRatio="18:22"
                                    app:layout_constraintHeight_percent="0.6875"
                                    app:layout_constraintHorizontal_bias="0.021978"
                                    android:src="@mipmap/ic_notification"/>
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintDimensionRatio="158:32"
                                    app:layout_constraintHorizontal_bias="0.3609"
                                    android:gravity="center_vertical"
                                    app:autoSizeTextType="uniform"
                                    app:autoSizeMaxTextSize="14sp"
                                    app:autoSizeMinTextSize="1sp"
                                    android:textColor="#383636"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text="@string/notifications"/>
                                <androidx.appcompat.widget.SwitchCompat
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintDimensionRatio="42:24"
                                    app:layout_constraintHeight_percent="0.75"
                                    app:layout_constraintHorizontal_bias="0.9437751"
                                    android:thumb="@drawable/switch_thumb"
                                    app:track="@drawable/switch_track"
                                    android:clickable="false"
                                    android:checked="@{viewModel.areNotificationsOn}"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="30"/>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="32"
                                android:onClick="@{(_) -> viewModel.onFlashClick()}">
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintDimensionRatio="12:24"
                                    app:layout_constraintHeight_percent="0.75"
                                    app:layout_constraintHorizontal_bias="0.032258"
                                    android:src="@mipmap/ic_flash"/>
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintDimensionRatio="158:32"
                                    app:layout_constraintHorizontal_bias="0.3609"
                                    android:gravity="center_vertical"
                                    app:autoSizeTextType="uniform"
                                    app:autoSizeMaxTextSize="14sp"
                                    app:autoSizeMinTextSize="1sp"
                                    android:textColor="#383636"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text="@string/flash"/>
                                <androidx.appcompat.widget.SwitchCompat
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintDimensionRatio="42:24"
                                    app:layout_constraintHeight_percent="0.75"
                                    app:layout_constraintHorizontal_bias="0.9437751"
                                    android:thumb="@drawable/switch_thumb"
                                    app:track="@drawable/switch_track"
                                    android:clickable="false"
                                    android:checked="@{viewModel.isFlashOn}"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="30"/>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="32"
                                android:onClick="@{(_) -> viewModel.onVibrationClick()}">
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintDimensionRatio="29.05:24"
                                    app:layout_constraintHeight_percent="0.75"
                                    android:src="@drawable/ic_vibration"/>
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintDimensionRatio="158:32"
                                    app:layout_constraintHorizontal_bias="0.3609"
                                    android:gravity="center_vertical"
                                    app:autoSizeTextType="uniform"
                                    app:autoSizeMaxTextSize="14sp"
                                    app:autoSizeMinTextSize="1sp"
                                    android:textColor="#383636"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text="@string/vibration"/>
                                <androidx.appcompat.widget.SwitchCompat
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintDimensionRatio="42:24"
                                    app:layout_constraintHeight_percent="0.75"
                                    app:layout_constraintHorizontal_bias="0.9437751"
                                    android:thumb="@drawable/switch_thumb"
                                    app:track="@drawable/switch_track"
                                    android:clickable="false"
                                    android:checked="@{viewModel.isVibrationOn}"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="30"/>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="32"
                                android:onClick="@{(_) -> viewModel.onSoundClick()}">
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintDimensionRatio="28:24"
                                    app:layout_constraintHeight_percent="0.75"
                                    app:layout_constraintHorizontal_bias="0.0038"
                                    android:src="@mipmap/ic_sound"/>
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintDimensionRatio="158:32"
                                    app:layout_constraintHorizontal_bias="0.3609"
                                    android:gravity="center_vertical"
                                    app:autoSizeTextType="uniform"
                                    app:autoSizeMaxTextSize="14sp"
                                    app:autoSizeMinTextSize="1sp"
                                    android:textColor="#383636"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text="@string/sound"/>
                                <androidx.appcompat.widget.SwitchCompat
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintDimensionRatio="42:24"
                                    app:layout_constraintHeight_percent="0.75"
                                    app:layout_constraintHorizontal_bias="0.9437751"
                                    android:thumb="@drawable/switch_thumb"
                                    app:track="@drawable/switch_track"
                                    android:clickable="false"
                                    android:checked="@{viewModel.isSoundOn}"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/handleHitBox"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/container"
            app:layout_constraintDimensionRatio="38:74"
            app:layout_constraintHeight_percent="0.0925"
            app:layout_constraintVertical_bias="0.484848"/>

    </androidx.constraintlayout.motion.widget.MotionLayout>

</layout>