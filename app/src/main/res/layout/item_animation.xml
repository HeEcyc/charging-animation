<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="com.funny.charging_app.ui.custom.ScalableCardView.ScaleType"/>
        <variable
            name="item"
            type="com.funny.charging_app.model.AnimationItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.funny.charging_app.ui.custom.ScalableCardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="252:438"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            scaleType="@{ScaleType.BY_WIDTH}"
            scalableCornerRadius="@{0.15873f}">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#383636">
                <com.funny.charging_app.ui.custom.ScalableCardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="248:434"
                    app:layout_constraintWidth_percent="0.984"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp"
                    scaleType="@{ScaleType.BY_WIDTH}"
                    scalableCornerRadius="@{0.1532258f}">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/preview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:scaleX="1.1"
                        android:scaleY="1.1"/>
                </com.funny.charging_app.ui.custom.ScalableCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.funny.charging_app.ui.custom.ScalableCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>