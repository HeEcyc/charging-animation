<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.kapi.ca.repository.preferences.Preferences"/>
        <import type="com.kapi.ca.ui.custom.ScalableCardView.ScaleType"/>
        <import type="android.view.View"/>
        <variable
            name="item"
            type="com.kapi.ca.model.animation.Animation" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.kapi.ca.ui.custom.ScalableCardView
            android:id="@+id/buttonA01"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="152:269"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp"
            app:scale_by="byWidth"
            app:scalable_corner_radius="0.013">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E7231C"
                android:visibility="@{Preferences.INSTANCE.selectedAnimationObservable == item ? View.VISIBLE : View.GONE}">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="148:265"
                    app:layout_constraintWidth_percent="0.97"
                    android:scaleType="centerCrop" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.kapi.ca.ui.custom.ScalableCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>