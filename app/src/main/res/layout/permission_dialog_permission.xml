<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="198:78"
            app:layout_constraintWidth_percent="0.697"
            app:layout_constraintVertical_bias="0.176"
            android:gravity="start|center_vertical"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="24sp"
            app:autoSizeMinTextSize="1sp"
            android:textColor="#3B3535"
            android:fontFamily="@font/roboto_bold"
            android:textAllCaps="true"
            android:text="@string/give_permissions_for_the_application_work_properly"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/permission_decor_lines"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="221:80"
            app:layout_constraintWidth_percent="0.778"
            app:layout_constraintVertical_bias="0.4"
            android:gravity="center_vertical|start"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="18sp"
            app:autoSizeMinTextSize="1sp"
            android:textColor="#3B3535"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/allow_showing_over_other_apps_this_is_necessary_for_correct_work_application"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/buttonAllow"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="157:36"
            app:layout_constraintWidth_percent="0.5528"
            app:layout_constraintVertical_bias="0.5945"
            app:layout_constraintHorizontal_bias="0.74"
            android:background="@drawable/button_red_157x36">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="125:20"
                app:layout_constraintHeight_percent="0.55555"
                android:gravity="center"
                app:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="18sp"
                app:autoSizeMinTextSize="1sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/roboto_bold"
                android:textAllCaps="true"
                android:text="@string/allow"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>