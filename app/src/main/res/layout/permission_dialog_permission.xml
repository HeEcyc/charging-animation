<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="296:239"
        app:layout_constraintVertical_bias="0.0736"
        android:src="@mipmap/permission_dialog_image_permission"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="203:47"
        app:layout_constraintWidth_percent="0.6858"
        app:layout_constraintVertical_bias="0.5437"
        android:gravity="center"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="16sp"
        app:autoSizeMinTextSize="1sp"
        android:textColor="#0B0135"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/give_permissions_for_the_application_work_properly"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="203:60"
        app:layout_constraintWidth_percent="0.6858"
        app:layout_constraintVertical_bias="0.7146"
        android:gravity="center"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="12sp"
        app:autoSizeMinTextSize="1sp"
        android:textColor="#800B0135"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/allow_showing_over_other_apps_this_is_necessary_for_correct_work_application"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/buttonAllow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="248:50"
        app:layout_constraintWidth_percent="0.838"
        app:layout_constraintVertical_bias="0.9238"
        app:cardElevation="0dp"
        app:cardCornerRadius="500dp"
        app:cardBackgroundColor="#0B0135">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="20sp"
            app:autoSizeMinTextSize="1sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/allow"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>