<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.sti.ilo.ui.settings.SettingsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:background="@mipmap/app_bg">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="164">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/buttonBack"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="70:66"
                    app:layout_constraintWidth_percent="0.194444"
                    app:layout_constraintHorizontal_bias="0.03448"
                    app:layout_constraintVertical_bias="0.397959"
                    android:src="@mipmap/ic_back"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="300:32"
                    app:layout_constraintWidth_percent="0.8333"
                    android:gravity="center_vertical|start"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMaxTextSize="30sp"
                    app:autoSizeMinTextSize="1sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/recoleta_bold"
                    android:text="@string/settings"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="613"
                android:scrollbars="none"
                android:overScrollMode="never">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="360:365"
                        android:orientation="vertical">

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="32"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="41"
                            android:onClick="@{(_) -> viewModel.onTurnOnOffClick()}">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="18:19"
                                app:layout_constraintWidth_percent="0.05"
                                app:layout_constraintHorizontal_bias="0.058"
                                android:src="@drawable/ic_power"/>
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="210:22"
                                app:layout_constraintWidth_percent="0.58333"
                                app:layout_constraintHorizontal_bias="0.38666666"
                                android:gravity="center_vertical"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMaxTextSize="20sp"
                                app:autoSizeMinTextSize="1sp"
                                android:textColor="#FFFFFF"
                                android:fontFamily="@font/sf_pro_display_bold"
                                android:text="@string/charging_animation"/>
                            <androidx.appcompat.widget.SwitchCompat
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="64:44"
                                app:layout_constraintWidth_percent="0.1388888888"
                                app:layout_constraintHorizontal_bias="0.9548"
                                android:thumb="@drawable/switch_thumb"
                                app:track="@drawable/switch_track"
                                android:clickable="false"
                                android:checked="@{viewModel.isAppOn}"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="16"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="41"
                            android:onClick="@{(_) -> viewModel.onNotificationsClick()}">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="1:1"
                                app:layout_constraintWidth_percent="0.05"
                                app:layout_constraintHorizontal_bias="0.058"
                                android:src="@drawable/ic_notification"/>
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="210:22"
                                app:layout_constraintWidth_percent="0.58333"
                                app:layout_constraintHorizontal_bias="0.38666666"
                                android:gravity="center_vertical"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMaxTextSize="20sp"
                                app:autoSizeMinTextSize="1sp"
                                android:textColor="#FFFFFF"
                                android:fontFamily="@font/sf_pro_display_bold"
                                android:text="@string/notifications"/>
                            <androidx.appcompat.widget.SwitchCompat
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="64:44"
                                app:layout_constraintWidth_percent="0.1388888888"
                                app:layout_constraintHorizontal_bias="0.9548"
                                android:thumb="@drawable/switch_thumb"
                                app:track="@drawable/switch_track"
                                android:clickable="false"
                                android:checked="@{viewModel.areNotificationsOn}"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="5"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="41"
                            android:onClick="@{(_) -> viewModel.onFlashClick()}">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="1:1"
                                app:layout_constraintWidth_percent="0.05"
                                app:layout_constraintHorizontal_bias="0.058"
                                android:visibility="@{viewModel.areNotificationsOn ? View.VISIBLE : View.GONE}"
                                android:src="@drawable/ic_flash" />
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="1:1"
                                app:layout_constraintWidth_percent="0.05"
                                app:layout_constraintHorizontal_bias="0.058"
                                android:tint="#A4A0A0"
                                android:visibility="@{!viewModel.areNotificationsOn ? View.VISIBLE : View.GONE}"
                                android:src="@drawable/ic_flash" />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="210:22"
                                app:layout_constraintWidth_percent="0.58333"
                                app:layout_constraintHorizontal_bias="0.38666666"
                                android:gravity="center_vertical"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMaxTextSize="20sp"
                                app:autoSizeMinTextSize="1sp"
                                android:textColor="#FFFFFF"
                                android:fontFamily="@font/sf_pro_display_bold"
                                android:visibility="@{viewModel.areNotificationsOn ? View.VISIBLE : View.GONE}"
                                android:text="@string/flash" />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="210:22"
                                app:layout_constraintWidth_percent="0.58333"
                                app:layout_constraintHorizontal_bias="0.38666666"
                                android:gravity="center_vertical"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMaxTextSize="20sp"
                                app:autoSizeMinTextSize="1sp"
                                android:textColor="#A4A0A0"
                                android:fontFamily="@font/sf_pro_display_bold"
                                android:visibility="@{!viewModel.areNotificationsOn ? View.VISIBLE : View.GONE}"
                                android:text="@string/flash" />
                            <androidx.appcompat.widget.SwitchCompat
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="64:44"
                                app:layout_constraintWidth_percent="0.1388888888"
                                app:layout_constraintHorizontal_bias="0.9548"
                                android:thumb="@drawable/switch_thumb"
                                app:track="@drawable/switch_track"
                                android:clickable="false"
                                android:checked="@{viewModel.isFlashOn}"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="5"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="41"
                            android:onClick="@{(_) -> viewModel.onVibrationClick()}">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="18:15"
                                app:layout_constraintWidth_percent="0.05"
                                app:layout_constraintHorizontal_bias="0.058"
                                android:visibility="@{viewModel.areNotificationsOn ? View.VISIBLE : View.GONE}"
                                android:src="@drawable/ic_vibration"/>
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="18:15"
                                app:layout_constraintWidth_percent="0.05"
                                app:layout_constraintHorizontal_bias="0.058"
                                android:tint="#A4A0A0"
                                android:visibility="@{!viewModel.areNotificationsOn ? View.VISIBLE : View.GONE}"
                                android:src="@drawable/ic_vibration"/>
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="210:22"
                                app:layout_constraintWidth_percent="0.58333"
                                app:layout_constraintHorizontal_bias="0.38666666"
                                android:gravity="center_vertical"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMaxTextSize="20sp"
                                app:autoSizeMinTextSize="1sp"
                                android:textColor="#FFFFFF"
                                android:fontFamily="@font/sf_pro_display_bold"
                                android:visibility="@{viewModel.areNotificationsOn ? View.VISIBLE : View.GONE}"
                                android:text="@string/vibration"/>
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="210:22"
                                app:layout_constraintWidth_percent="0.58333"
                                app:layout_constraintHorizontal_bias="0.38666666"
                                android:gravity="center_vertical"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMaxTextSize="20sp"
                                app:autoSizeMinTextSize="1sp"
                                android:textColor="#A4A0A0"
                                android:fontFamily="@font/sf_pro_display_bold"
                                android:visibility="@{!viewModel.areNotificationsOn ? View.VISIBLE : View.GONE}"
                                android:text="@string/vibration"/>
                            <androidx.appcompat.widget.SwitchCompat
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="64:44"
                                app:layout_constraintWidth_percent="0.1388888888"
                                app:layout_constraintHorizontal_bias="0.9548"
                                android:thumb="@drawable/switch_thumb"
                                app:track="@drawable/switch_track"
                                android:clickable="false"
                                android:checked="@{viewModel.isVibrationOn}"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="5"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="41"
                            android:onClick="@{(_) -> viewModel.onSoundClick()}">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="18:15"
                                app:layout_constraintWidth_percent="0.05"
                                app:layout_constraintHorizontal_bias="0.058"
                                android:visibility="@{viewModel.areNotificationsOn ? View.VISIBLE : View.GONE}"
                                android:src="@drawable/ic_sound"/>
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="18:15"
                                app:layout_constraintWidth_percent="0.05"
                                app:layout_constraintHorizontal_bias="0.058"
                                android:tint="#A4A0A0"
                                android:visibility="@{!viewModel.areNotificationsOn ? View.VISIBLE : View.GONE}"
                                android:src="@drawable/ic_sound"/>
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="210:22"
                                app:layout_constraintWidth_percent="0.58333"
                                app:layout_constraintHorizontal_bias="0.38666666"
                                android:gravity="center_vertical"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMaxTextSize="20sp"
                                app:autoSizeMinTextSize="1sp"
                                android:textColor="#FFFFFF"
                                android:fontFamily="@font/sf_pro_display_bold"
                                android:visibility="@{viewModel.areNotificationsOn ? View.VISIBLE : View.GONE}"
                                android:text="@string/sound"/>
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="210:22"
                                app:layout_constraintWidth_percent="0.58333"
                                app:layout_constraintHorizontal_bias="0.38666666"
                                android:gravity="center_vertical"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMaxTextSize="20sp"
                                app:autoSizeMinTextSize="1sp"
                                android:textColor="#A4A0A0"
                                android:fontFamily="@font/sf_pro_display_bold"
                                android:visibility="@{!viewModel.areNotificationsOn ? View.VISIBLE : View.GONE}"
                                android:text="@string/sound"/>
                            <androidx.appcompat.widget.SwitchCompat
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="64:44"
                                app:layout_constraintWidth_percent="0.1388888888"
                                app:layout_constraintHorizontal_bias="0.9548"
                                android:thumb="@drawable/switch_thumb"
                                app:track="@drawable/switch_track"
                                android:clickable="false"
                                android:checked="@{viewModel.isSoundOn}"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>