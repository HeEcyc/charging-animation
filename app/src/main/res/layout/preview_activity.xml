<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.charful.cheerge.ui.preview.PreviewViewModel" />
        <import type="com.charful.cheerge.ui.custom.ScalableCardView.ScaleType"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:background="@mipmap/app_bg">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="360:105"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="360:672"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="8"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="546">
                        <com.charful.cheerge.ui.custom.ScalableCardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="340:546"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardElevation="0dp"
                            scaleType="@{com.charful.cheerge.ui.custom.ScalableCardView.ScaleType.BY_WIDTH}"
                            scalableCornerRadius="@{0.0294f}">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/animationHost1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </com.charful.cheerge.ui.custom.ScalableCardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="21"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="47">
                        <com.charful.cheerge.ui.custom.ScalableCardView
                            android:id="@+id/buttonApply"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="164:47"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@android:color/transparent"
                            scaleType="@{com.charful.cheerge.ui.custom.ScalableCardView.ScaleType.BY_HEIGHT}"
                            scalableCornerRadius="@{0.1638f}">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/button_grdient_bg">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintDimensionRatio="150:33"
                                    app:layout_constraintHeight_percent="0.7"
                                    android:gravity="center"
                                    app:autoSizeTextType="uniform"
                                    app:autoSizeMaxTextSize="30sp"
                                    app:autoSizeMinTextSize="1sp"
                                    android:textColor="#FFFFFF"
                                    android:fontFamily="@font/sf_pro_display_bold"
                                    android:text="@string/apply"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.charful.cheerge.ui.custom.ScalableCardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="50"/>

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/animationHost2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:visibility="gone"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="360:105">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/buttonBack"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="70:66"
                app:layout_constraintHeight_percent="0.62857"
                app:layout_constraintHorizontal_bias="0.03448"
                android:src="@mipmap/ic_back"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/buttonHide"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="70:66"
                app:layout_constraintHeight_percent="0.62857"
                app:layout_constraintHorizontal_bias="0.96552"
                android:src="@mipmap/ic_hide_ui"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/buttonShow"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="70:66"
                app:layout_constraintHeight_percent="0.62857"
                app:layout_constraintHorizontal_bias="0.96552"
                android:src="@mipmap/ic_show_ui"
                android:visibility="gone"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>